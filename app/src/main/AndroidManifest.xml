<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marshong.packitup" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.marshong.packitup.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marshong.packitup.FromMainActivity"
            android:label="@string/title_activity_from_main" />
        <activity
            android:name="com.marshong.packitup.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.marshong.packitup.MainActivity" />
        <activity
            android:name="com.marshong.packitup.StorageListActivity"
            android:label="@string/title_activity_box"
            android:parentActivityName="com.marshong.packitup.MainActivity" />
        <activity
            android:name="com.marshong.packitup.AddContainerActivity"
            android:label="@string/title_activity_add_container"
            android:parentActivityName=".AddContainerActivity">
        </activity>
    </application>

</manifest>
