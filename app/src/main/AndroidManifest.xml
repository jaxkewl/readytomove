<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marshong.packitup">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.FromMainActivity"
            android:label="@string/title_activity_from_main" />
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.StorageListActivity" />
        <activity
            android:name=".ui.StorageListActivity"
            android:label="@string/title_activity_box"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.AddContainerActivity"
            android:label="@string/title_activity_add_container"
            android:parentActivityName=".ui.StorageListActivity"></activity>
        <activity
            android:name=".ui.AddItemActivity"
            android:label="@string/title_activity_add_item"
            android:parentActivityName=".ui.StorageListActivity"></activity>
        <activity
            android:name=".ui.AddLocationActivity"
            android:label="@string/title_activity_add_location"
            android:parentActivityName=".ui.StorageListActivity">

        </activity>
        <activity
            android:name=".ui.DBDevActivity"
            android:label="@string/title_activity_dbdev"
            android:parentActivityName=".ui.StorageListActivity">

        </activity>
    </application>

</manifest>
